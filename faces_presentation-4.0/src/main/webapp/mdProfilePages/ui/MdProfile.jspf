<f:subview id="MdProfile">
	<h:panelGroup layout="block" styleClass="xHuge_area0">
	
		<h2 class="huge_area0" style="text-align: center;">
			<h:outputText value="#{lbl.profile_name} : "/>
			<h:inputText value="#{MdProfileBean.name}" valueChangeListener="#{MdProfileBean.nameListener}"/>
		</h2>
		<br/><br/>
		<h:outputText value="#{lbl.metadata_select}"/>
		<br/>
		<tr:iterator id="profile" var="profile" value="#{MdProfileBean.mdProfile}" varStatus="position">
			<h:panelGroup layout="block" styleClass="xHuge_area0">
				<h:selectOneMenu value="#{profile.selected.label}" valueChangeListener="#{profile.menuListener}" immediate="true">
					<f:selectItems value="#{MdProfileBean.metadataMenu}"/>
				</h:selectOneMenu>
				<h:outputText value="#{lbl.metadata_value}"/>
				<h:inputText value="#{profile.selected.simpleValue}" valueChangeListener="#{profile.valueListener}" immediate="true"/>
				<tr:commandButton styleClass="min_imgBtn add groupTool" shortDesc="Add Metadata" actionListener="#{MdProfileBean.addMetadata}">
					<f:attribute name="position" value="#{position.index}"></f:attribute>
				</tr:commandButton>
				<tr:commandButton styleClass="min_imgBtn remove groupTool" shortDesc="Remove Metadata" actionListener="#{MdProfileBean.removeMetadata}">
					<f:attribute name="position" value="#{position.index}"></f:attribute>
				</tr:commandButton>
			</h:panelGroup>
		</tr:iterator>
		
	</h:panelGroup>
</f:subview>
</div>