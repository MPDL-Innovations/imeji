<f:subview id="Details">
	<h:panelGroup layout="block" styleClass="huge_area1_p4 metaDataSection">
	
		<h2 class="xLarge_area0" style="text-align: center;">
			<h:outputText value="#{ImageBean.collection.metadata.title}"/>
		</h2>
		
		<a4j:repeat id="mdList" var="md" value="#{ImageBean.imgMetadata}">
			<h:panelGroup layout="block" styleClass="huge_area0" rendered="#{md.type.enumType == 'CONE_AUTHOR'}">
				<h:panelGroup styleClass="huge_area0" rendered="#{md.type.person.familyName != null and md.type.person.familyName != ''}">
					<h:outputLabel value="#{md.type.label}:" />
				</h:panelGroup>			
				<h:panelGroup styleClass="huge_area0" rendered="#{md.type.person.familyName != null and md.type.person.familyName != ''}">
					<h:outputLabel value="Family Name:" />
					<h:outputLabel value="#{md.type.person.familyName}"/>
				</h:panelGroup>
				<h:panelGroup styleClass="huge_area0" rendered="#{md.type.person.givenName != null and md.type.person.givenName != ''}">
					<h:outputLabel value="Given Name:" />
					<h:outputLabel value="#{md.type.person.givenName}"/>
				</h:panelGroup>
				<h:panelGroup styleClass="huge_area0"  rendered="#{md.type.person.alternativeName != null and md.type.person.alternativeName != ''}">
					<h:outputLabel value="Alternative Name:"/>
					<h:outputLabel value="#{md.type.person.alternativeName}"/>
				</h:panelGroup>
				<h:panelGroup styleClass="huge_area0"  rendered="#{md.type.person.identifier != null and md.type.person.identifier != ''}">
					<h:outputLabel value="Identifier:"/>
					<h:outputLabel value="#{md.type.person.identifier}"/>
				</h:panelGroup>
				<h:panelGroup styleClass="huge_area0"  rendered="#{md.type.person.role != null}">
					<h:outputLabel value="Role:"/>
					<h:outputLabel value="#{md.type.person.role}"/>
				</h:panelGroup>
				<a4j:repeat id="orgaList" var="orga" value="#{md.type.person.organizations}" rendered="#{not empty md.type.person.organizations}">
					<h:panelGroup styleClass="huge_area0"  >
						<h:outputLabel value="Organizations:"/>
						<h:outputLabel value="#{orga.name}"/>
					</h:panelGroup>
				</a4j:repeat>
			</h:panelGroup>
			
			<h:panelGroup layout="block" styleClass="huge_area0" rendered="#{md.type.enumType == 'TEXT'}">
				<h:panelGroup styleClass="free_area0 detailsLine" rendered="#{md.type.text != null }">
					<h:outputLabel value="&#160;" />
				</h:panelGroup>						
			</h:panelGroup>
			
			<h:panelGroup layout="block" styleClass="huge_area0" rendered="#{md.type.enumType == 'TEXT'}">
				<h:panelGroup styleClass="free_area0 detailsLine" rendered="#{md.type.text != null }">
					<h:outputLabel value="#{md.type.label}:" />
					<h:outputLabel value="#{md.type.text}"/>
				</h:panelGroup>						
			</h:panelGroup>
			
			<h:panelGroup layout="block" styleClass="huge_area0" rendered="#{md.type.enumType == 'NUMBER'}">
				<h:panelGroup styleClass="free_area0 detailsLine" rendered="#{md.type.number != null }">
					<h:outputLabel value="&#160;" />
				</h:panelGroup>						
			</h:panelGroup>
			
			<h:panelGroup layout="block" styleClass="huge_area0" rendered="#{md.type.enumType == 'NUMBER'}">
				<h:panelGroup styleClass="free_area0 detailsLine" rendered="#{md.type.number != null }">
					<h:outputLabel value="#{md.type.label}:" />
					<h:outputLabel value="#{md.type.number}"/>
				</h:panelGroup>						
			</h:panelGroup>
		</a4j:repeat>
		
