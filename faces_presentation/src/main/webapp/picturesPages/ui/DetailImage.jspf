<%@ taglib uri="http://myfaces.apache.org/trinidad" prefix="tr"%>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h"%>
<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f"%>
<f:subview id="Image">
	<h:panelGroup layout="block" styleClass="half_area0"> 
		<h:panelGroup layout="block" styleClass="half_area1_p8 endline detailedItem #{Detail.item.imageStyleClass}">
			<span>
				<h:outputLink id="lnkPicFullResolution" value="#{Detail.item.originalUrl}" target="_blank" rendered="#{SessionBean.currentUrl != 'comparison'}">
					<h:graphicImage id="picWebResolution" title="#{Detail.item.fileName}" alt="#{Detail.item.fileName}" styleClass="vertical" url="#{Detail.item.webResolutionUrl}" />
				</h:outputLink>
				<h:outputLink id="lnkPicFullResolutionForComparison" value="#{Navigation.detailUrl}/#{Detail.item.item.objid}" rendered="#{SessionBean.currentUrl == 'comparison'}">
					<h:graphicImage id="picWebResolutionForComparison" title="#{Detail.item.fileName}" alt="#{Detail.item.fileName}" styleClass="vertical" url="#{Detail.item.webResolutionUrl}"/>
				</h:outputLink>
			</span>
		</h:panelGroup>
		
		<h:panelGroup layout="block" styleClass="half_area0">
			<h:outputText styleClass="free_area0 xSmall_marginRExcl" rendered="#{Detail.item.type == 'face'}" value="#{Detail.item.mdRecords.label['escidoc.face.picture-group']} #{Detail.item.mdRecords.value['escidoc.face.picture-group']}" />
			<h:outputLink id="lnkAddToAlbum" styleClass="free_area0 xSmall_marginRExcl" value="#{Navigation.albumInterfaceUrl}/#{AlbumSession.active.version.objectId}/ADDPICTURE/#{Detail.item.item.objid}"  rendered="#{(!Detail.item.inAlbum) && (AlbumSession.active.latestVersion.objectId != null) && (AlbumSession.active.state == 'PENDING')}">
				<h:outputText value="#{lbl.add_to_active}"/>
			</h:outputLink>
			 
			<h:outputLink id="lnkRemoveFromAlbum" styleClass="free_area0" rendered="#{(AlbumSession.current.size != '0') and (AlbumSession.current.state == 'PENDING')}" value="#{Navigation.albumInterfaceUrl}/#{AlbumSession.current.latestVersion.objectId}/REMOVEPICTURE/#{Detail.item.item.objid}/back">
				<h:outputText  value="#{lbl.remove_from_album}"/>
			</h:outputLink>
			<h:outputLink id="lnkLicense" styleClass="free_area0 sectionToolSection" target="_blank" value="#{ApplicationBean.licenseUrl}" rendered="#{ApplicationBean.licenseUrl != ''}">
				<h:graphicImage id="imageLicense" styleClass="free_area0" url="#{ApplicationBean.licenseImage}" rendered="#{ApplicationBean.licenseImage != ''}" />
			</h:outputLink>
		</h:panelGroup>
	</h:panelGroup>
</f:subview>
