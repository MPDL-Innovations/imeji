{
	"index": {
		"analysis": {
			"analyzer": {
				"ngram_analyzer": {
					"tokenizer": "ngram_tokenizer"
				},
				"edgegram_analyzer": {
					"tokenizer": "edgegram_tokenizer",
					"filter": [
						"lowercase"
					]
				}
			},
			"tokenizer": {
				"ngram_tokenizer": {
					"type": "nGram",
					"min_gram": "3",
					"max_gram": "3"
				},
				"edgegram_tokenizer": {
					"type": "edge_ngram",
					"min_gram": 2,
					"max_gram": 100,
					"token_chars": ["letter", "digit", "punctuation", "symbol"]
				}
			}
		}
	}
}